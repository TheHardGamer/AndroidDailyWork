<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndroidTask2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@drawable/gradientbg"
                android:paddingBottom="6dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMI"
                        android:textSize="50dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/interbold"
                        android:textColor="#f0ff00"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Body Mass Index)"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:textColor="#f0ff00"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:elevation="10dp"
                        android:orientation="vertical"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="@color/black"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="32.95"
                            android:textSize="15dp"
                            android:textColor="#f0ff00"
                            android:textStyle="bold"
                            android:fontFamily="@font/interbold"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Obese Class I"
                        android:textColor="#f0ff00"
                        android:textSize="20dp"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEE"
                        android:textSize="50dp"
                        android:textColor="#f0ff00"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/interbold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Daily Energy Expenditure)"
                        android:textSize="12dp"
                        android:textColor="#f0ff00"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:elevation="10dp"
                        android:orientation="vertical"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="@color/black"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="2586.19"
                            android:textSize="15dp"
                            android:textColor="#f0ff00"
                            android:textStyle="bold"
                            android:fontFamily="@font/interbold"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kilo Calorie / Day"
                        android:textSize="20dp"
                        android:textColor="#f0ff00"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:weightSum="2"
                android:paddingBottom="10dp"
                android:background="@color/gray">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:foreground="?selectableItemBackground"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bmi128"
                        android:layout_gravity="center"
                        android:paddingBottom="25dp">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CHECK YOUR HEALTH"
                        android:layout_gravity="bottom"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/interbold"
                        android:textSize="15dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:gravity="center"
                        android:background="#e91e63">
                    </TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:foreground="?selectableItemBackground"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/nutrition128"
                        android:layout_gravity="center"
                        android:paddingBottom="25dp">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NUTRITION"
                        android:layout_gravity="bottom"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/interbold"
                        android:textSize="15dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:gravity="center"
                        android:background="#e91e63">
                    </TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:weightSum="2"
                android:paddingBottom="10dp"
                android:background="@color/gray">
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:foreground="?selectableItemBackground"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/vitamin128"
                        android:layout_gravity="center"
                        android:paddingBottom="25dp">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VITAMINS"
                        android:layout_gravity="bottom"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/interbold"
                        android:textSize="15dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:gravity="center"
                        android:background="#e91e63">
                    </TextView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:foreground="?selectableItemBackground"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mineral128"
                        android:layout_gravity="center"
                        android:paddingBottom="25dp">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MINERALS"
                        android:layout_gravity="bottom"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/interbold"
                        android:textSize="15dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:gravity="center"
                        android:background="#e91e63">
                    </TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFB6C1">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:text="TEST YOUR DEFICIENCY"
                    android:textColor="@color/black">
                </androidx.appcompat.widget.AppCompatTextView>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cornerRadius="20dp"
                    android:text="CLICK HERE"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"
                    android:backgroundTint="#e91e63"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/white"
                    android:foreground="?selectableItemBackground">
                    <LinearLayout
                        android:paddingTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="15dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:src="@drawable/whatsapp">
                        </ImageView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:src="@drawable/facebook">
                        </ImageView>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:src="@drawable/instagram">
                        </ImageView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="SHARE ON DIFFERENT PLATFORMS"
                        android:background="#e91e63" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/medicineimage4"
                    android:layout_marginBottom="-30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEARCH FOR MEDICINES"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/interbold"
                    android:textSize="25dp"
                    android:background="@color/white"
                    android:textColor="#e91e63"
                    android:paddingBottom="10dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>